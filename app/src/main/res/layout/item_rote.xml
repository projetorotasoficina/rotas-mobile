<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_sm"
    android:layout_marginEnd="@dimen/margin_sm"
    android:layout_marginBottom="@dimen/margin_sm"
    app:cardCornerRadius="@dimen/radius_lg"
    app:cardElevation="@dimen/elevation_sm"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_md"
        android:gravity="center_vertical">

        <!-- Header da rota -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_sm">

            <!-- Ícone da rota -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_route"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:contentDescription="Ícone da rota" />

            <!-- Título da rota -->
            <TextView
                android:id="@+id/tvTituloRota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ROTA A"
                android:textAppearance="@style/TextAppearance.Subtitle"
                android:textColor="@color/foreground" />

            <!-- Badge de status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATIVA"
                android:textAppearance="@style/TextAppearance.Caption"
                android:textColor="@color/success"
                android:textStyle="bold"
                android:background="@drawable/badge_success"
                android:padding="@dimen/spacing_xs"
                android:layout_marginStart="@dimen/spacing_sm" />

        </LinearLayout>

        <!-- Descrição da rota -->
        <TextView
            android:id="@+id/tvDescricaoRota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fraron, Centro, Pinheiros"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColor="@color/muted_foreground"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Informações adicionais -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo: Resíduo Orgânico"
                android:textAppearance="@style/TextAppearance.Caption"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 pontos"
                android:textAppearance="@style/TextAppearance.Caption"
                android:textColor="@color/primary"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
