<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_sm"
    android:layout_marginEnd="@dimen/margin_sm"
    android:layout_marginBottom="@dimen/margin_sm"
    app:cardCornerRadius="@dimen/radius_lg"
    app:cardElevation="@dimen/elevation_sm"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_md">

        <!-- Header: Placa e Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_xs">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_truck"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:contentDescription="Ícone do caminhão" />

            <TextView
                android:id="@+id/tvPlaca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="GRT-0102"
                android:textAppearance="@style/TextAppearance.Subtitle"
                android:textColor="@color/foreground" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="DISPONÍVEL"
                android:textAppearance="@style/TextAppearance.Caption"
                android:textColor="@color/success"
                android:textStyle="bold"
                android:background="@drawable/badge_success"
                android:padding="@dimen/spacing_xs"
                android:layout_marginStart="@dimen/spacing_sm" />

        </LinearLayout>

        <!-- Modelo/Descrição -->
        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Caminhão Volvo, azul"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColor="@color/muted_foreground"
            android:layout_marginStart="32dp" />

        <!-- Detalhes Adicionais (invisíveis por padrão) -->
        <LinearLayout
            android:id="@+id/llDetalhesColeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:visibility="gone" 
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTipoColeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Coleta Seletiva"
                    android:textAppearance="@style/TextAppearance.Body"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_xs"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTipoResiduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Reciclável"
                    android:textAppearance="@style/TextAppearance.Body"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>