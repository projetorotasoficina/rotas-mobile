<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.InitialSetupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_xl">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_truck"
                app:tint="@color/primary"
                android:layout_marginTop="@dimen/spacing_xxl"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuração Inicial"
                android:textAppearance="@style/TextAppearance.Headline"
                android:textColor="@color/foreground"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insira seu token de acesso para começar a usar o aplicativo."
                android:textAppearance="@style/TextAppearance.Body"
                android:textColor="@color/muted_foreground"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_xl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    android:text="Token de Acesso"
                    android:textAppearance="@style/TextAppearance.Label"/>

                <EditText
                    android:id="@+id/etToken"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:background="@drawable/input_background"
                    android:hint="● ● ● ● ● ●"
                    android:inputType="textPassword"
                    android:padding="@dimen/padding_md"
                    android:textAppearance="@style/TextAppearance.Body"/>

                 <TextView
                    android:id="@+id/tvTokenError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="Token inválido"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/destructive"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="Solicite o token ao administrador do sistema"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/muted_foreground" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAvancar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Avançar"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>